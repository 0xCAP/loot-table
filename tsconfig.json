{
  "version": "1.0.0",
  "compilerOptions": {
    "lib": ["DOM", "ES5", "ES6", "ESNext"],
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "sourceRoot": "./src",
    "pretty": true
  },
  "exclude": ["node_modules", "dist"]
}
